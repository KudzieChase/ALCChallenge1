<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        tools:srcCompat="@tools:sample/avatars"
        android:id="@+id/profileImageView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
        android:text="Kudzai Chasinda"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/profileImageView" app:layout_constraintHorizontal_bias="0.0"
        android:textAlignment="center" android:textSize="18sp" android:fontFamily="@font/imprima"
        android:textStyle="bold" android:textColor="#090808"/>
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintHorizontal_bias="0.0"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical"/>
    <TextView
        android:text="Track:"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" app:layout_constraintEnd_toStartOf="@+id/guideline2"
        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/divider" app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toTopOf="@+id/textView4" android:fontFamily="@font/imprima"
        android:textColor="#FA111111"/>
    <TextView
        android:text="Country:"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView4" app:layout_constraintEnd_toStartOf="@+id/guideline2"
        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toTopOf="@+id/textView5" android:fontFamily="@font/imprima"
        android:textColor="#FA111111"/>
    <TextView
        android:text="Email:"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView5" app:layout_constraintEnd_toStartOf="@+id/guideline2"
        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toTopOf="@+id/textView6" android:fontFamily="@font/imprima"
        android:textColor="#FA111111"/>
    <TextView
        android:text="Phone Number:"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView6" app:layout_constraintEnd_toStartOf="@+id/guideline2"
        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toTopOf="@+id/textView7" android:fontFamily="@font/imprima"
        android:textColor="#FA111111"/>
    <TextView
        android:text="Slack Username:"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:id="@+id/textView7" app:layout_constraintEnd_toStartOf="@+id/guideline2"
        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.5" android:fontFamily="@font/imprima" android:textColor="#0A0A0A"/>
    <TextView
        android:text="Android"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView8" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="@+id/textView3" app:layout_constraintBottom_toBottomOf="@+id/textView3"
        android:fontFamily="@font/imprima" android:textColor="#FA111111"/>
    <TextView
        android:text="Zimbabwe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/textView4" app:layout_constraintBottom_toBottomOf="@+id/textView4"
        android:fontFamily="@font/imprima" android:textColor="#FA111111"/>
    <TextView
        android:text="kudzai.chasinda@gmail.com"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        app:layout_constraintTop_toTopOf="@+id/textView5" app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:fontFamily="@font/imprima"
        android:textColor="#FA111111"/>
    <TextView
        android:text="+263779952141"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        app:layout_constraintTop_toTopOf="@+id/textView6" app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginStart="8dp"
        android:fontFamily="@font/imprima" android:textColor="#FA111111"/>
    <TextView
        android:text="@KudzaiChasinda"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/textView7" app:layout_constraintBottom_toBottomOf="@+id/textView7"
        android:fontFamily="@font/imprima" android:textColor="#0A0A0A"/>
</androidx.constraintlayout.widget.ConstraintLayout>